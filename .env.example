# YolNext Environment Configuration Template
# Copy this file to .env.local for development
# IMPORTANT: Never commit .env.local to version control

# =============================================================================
# NODE ENVIRONMENT
# =============================================================================
NODE_ENV=development

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000
HOST=0.0.0.0
CORS_ORIGIN=http://localhost:5173
FRONTEND_ORIGIN=http://localhost:5173

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/yolnext_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=yolnext_dev
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# =============================================================================
# FRONTEND CONFIGURATION (VITE)
# =============================================================================
VITE_API_URL=http://localhost:5000
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3
VITE_LOG_LEVEL=debug
VITE_ENABLE_SOCKET=true

# =============================================================================
# LEGAL COMPLIANCE (KVKK/Privacy/Terms)
# =============================================================================
VITE_COMPANY_NAME=Your Company Name
VITE_COMPANY_ADDRESS=Your Company Address
VITE_COMPANY_PHONE=Your Company Phone
VITE_SUPPORT_EMAIL=support@yourcompany.com
VITE_KVKK_EMAIL=kvkk@yourcompany.com
VITE_LEGAL_DOC_VERSION=v1.0.0

# Optional legal information
VITE_TAX_OFFICE=
VITE_TAX_NUMBER=
VITE_MERSIS=
VITE_TRADE_REGISTRY_NUMBER=

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourcompany.com

# =============================================================================
# SMS CONFIGURATION (OPTIONAL)
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
HELMET_CSP_ENABLED=false
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=debug
ENABLE_METRICS=true
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log
ENABLE_HEALTH_CHECKS=true
METRICS_PORT=9090
SENTRY_DSN=

# =============================================================================
# PAYMENT GATEWAY (IYZICO) - OPTIONAL
# =============================================================================
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# =============================================================================
# DEMO/DEVELOPMENT SETTINGS
# =============================================================================
DEMO_PASSWORD=secure-demo-password-change-me
