# YolNext Backend Environment Variables
# Copy this file to .env and update with your values

# Node Environment (development, staging, production)
NODE_ENV=development
PORT=5000

# Frontend Configuration
FRONTEND_ORIGIN=http://localhost:5173
# For production, use comma-separated origins:
# FRONTEND_ORIGIN=https://yolnext.com,https://www.yolnext.com

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/yolnext
DB_POOL_MAX=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=300

# Logging
LOG_LEVEL=info

# Data Retention (days)
RETENTION_MESSAGES_DAYS=365
RETENTION_NOTIFICATIONS_DAYS=90
RETENTION_AUDIT_DAYS=730

# Monitoring & Alerting (optional)
SENTRY_DSN=  # Optional - only if @sentry/node is installed
SENTRY_ENVIRONMENT=production
SLACK_WEBHOOK_URL=  # Optional - Slack notifications

# Email/SMS (optional)
EMAIL_SMTP_URL=smtp://user:pass@smtp.example.com:587
EMAIL_FROM=no-reply@yolnext.com
TWILIO_SID=  # Optional - SMS notifications
TWILIO_TOKEN=  # Optional - SMS notifications
TWILIO_FROM=  # Optional - SMS notifications

# Payment Gateway (Iyzico)
IYZICO_API_KEY=
IYZICO_SECRET_KEY=
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com
# For production use: https://api.iyzipay.com

# Production Safety Checks
# In production, these MUST be set:
# - JWT_SECRET (must be strong, min 32 characters)
# - DATABASE_URL (production database)
# - FRONTEND_ORIGIN (production frontend URL)
#
# See PRODUCTION_DEPLOYMENT.md for full production setup guide
# For production, also set:
# - SENTRY_DSN (error tracking)
# - EMAIL_SMTP_URL (notifications)
# - TWILIO_SID, TWILIO_TOKEN, TWILIO_FROM (SMS notifications - optional)

