# YolNext Environment Configuration

# API Configuration
# Development: http://localhost:5000
# Production (Render.com): https://yolnext-backend.onrender.com
# Production (Netlify): Set this in Netlify dashboard -> Site settings -> Environment variables
VITE_API_URL=http://localhost:5000
VITE_API_TIMEOUT=10000
VITE_API_RETRY_ATTEMPTS=3

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/yolnext
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=yolnext
DATABASE_USER=username
DATABASE_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Email Configuration (optional)
EMAIL_SMTP_URL=smtp://user:pass@smtp.example.com:587
EMAIL_FROM=no-reply@yolnext.com

# Payment Gateway (Iyzico)
IYZICO_API_KEY=your-iyzico-api-key
IYZICO_SECRET_KEY=your-iyzico-secret-key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com
# For production use: https://api.iyzipay.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Origin (for CORS)
FRONTEND_ORIGIN=http://localhost:5173

# Development
NODE_ENV=development
DEBUG=false