{
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/dist/**": true,
    "**/coverage/**": true,
    "**/tests/**": true,
    "**/tools/**": true,
    "**/backend/**": true,
    "**/.git/**": true,
    "**/.eslintcache": true,
    "**/test-results/**": true,
    "**/test-screenshots/**": true,
    "**/test-videos/**": true,
    "**/screenshots/**": true,
    "**/logs/**": true,
    "**/*.log": true,
    "**/*.cache": true,
    "**/legacy/**": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.eslintcache": true,
    "**/node_modules": false,
    "**/dist": true,
    "**/coverage": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/tests": true,
    "**/tools": true,
    "**/backend": true,
    "**/.git": true,
    "**/test-results": true,
    "**/test-screenshots": true,
    "**/test-videos": true,
    "**/screenshots": true,
    "**/logs": true,
    "**/legacy": true
  },
  "typescript.tsserver.watchOptions": {
    "excludeDirectories": [
      "**/node_modules",
      "**/dist",
      "**/coverage",
      "**/tests",
      "**/tools",
      "**/backend",
      "**/.git",
      "**/test-results",
      "**/test-screenshots",
      "**/test-videos",
      "**/screenshots",
      "**/logs",
      "**/legacy"
    ],
    "excludeFiles": [
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/*.cjs",
      "**/*.log"
    ]
  },
  "typescript.tsserver.maxTsServerMemory": 4096,
  "eslint.workingDirectories": [
    "src"
  ],
  "eslint.options": {
    "cache": true,
    "cacheLocation": ".eslintcache",
    "ignorePath": ".eslintignore"
  },
  "files.maxMemoryForLargeFilesMB": 4096,
  "editor.largeFileOptimizations": true
}